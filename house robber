class Solution {
public:
    int helper(vector<int>& nums , int n)
    {
        if(n==0) return nums[0];
        if(n<0) return 0;

        int pick = nums[n] + helper(nums , n-2);
        int notpick = 0+ helper(nums , n-1);
        return max(pick , notpick);
    }

    int rob(vector<int>& nums) {
        int n = nums.size();
       return helper(nums , n-1); 
    }
};
